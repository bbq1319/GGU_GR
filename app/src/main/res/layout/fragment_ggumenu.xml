<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="home" type="com.ggu.gguri.GGUMenuFragment" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TabHost
            android:id="@+id/tabHost"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/tab1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_margin="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:text="운영시간"
                                android:textSize="16dp"
                                android:textColor="@color/colorBlack"/>

                            <TableLayout
                                android:stretchColumns="*"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_line">

                                <TableRow>
                                    <TextView
                                        android:background="@drawable/bg_line"
                                        android:text="구분"
                                        android:textAlignment="center"/>
                                    <TextView
                                        android:background="@drawable/bg_line"
                                        android:text="월"
                                        android:textAlignment="center"/>
                                    <TextView
                                        android:background="@drawable/bg_line"
                                        android:text="화"
                                        android:textAlignment="center"/>
                                    <TextView
                                        android:background="@drawable/bg_line"
                                        android:text="수"
                                        android:textAlignment="center"/>
                                    <TextView
                                        android:background="@drawable/bg_line"
                                        android:text="목"
                                        android:textAlignment="center"/>
                                    <TextView
                                        android:background="@drawable/bg_line"
                                        android:text="금"
                                        android:textAlignment="center" />
                                    <TextView
                                        android:background="@drawable/bg_line"
                                        android:text="토"
                                        android:textAlignment="center" />
                                    <TextView
                                        android:background="@drawable/bg_line"
                                        android:text="일"
                                        android:textAlignment="center"/>
                                </TableRow>

                                <TableRow>
                                    <TextView
                                        android:background="@drawable/bg_line"
                                        android:text="조식"
                                        android:textAlignment="center"/>
                                    <TextView
                                        android:background="@drawable/bg_line"
                                        android:layout_span="4"
                                        android:text="07:30~09:00"
                                        android:textAlignment="center"/>
                                    <TextView
                                        android:background="@drawable/bg_line"
                                        android:layout_span="3"
                                        android:text="08:00~09:00"
                                        android:textAlignment="center"/>
                                </TableRow>

                                <TableRow>
                                    <TextView
                                        android:background="@drawable/bg_line"
                                        android:text="중식"
                                        android:textAlignment="center"/>
                                    <TextView
                                        android:background="@drawable/bg_line"
                                        android:layout_span="4"
                                        android:text="11:30~13:00"
                                        android:textAlignment="center"/>
                                    <TextView
                                        android:background="@drawable/bg_line"
                                        android:layout_span="3"
                                        android:text="12:00~13:00"
                                        android:textAlignment="center"/>
                                </TableRow>

                                <TableRow>
                                    <TextView
                                        android:background="@drawable/bg_line"
                                        android:text="석식"
                                        android:textAlignment="center"/>
                                    <TextView
                                        android:background="@drawable/bg_line"
                                        android:layout_span="4"
                                        android:text="17:30~19:00"
                                        android:textAlignment="center"/>
                                    <TextView
                                        android:background="@drawable/bg_line"
                                        android:layout_span="3"
                                        android:text="18:00~19:00"
                                        android:textAlignment="center"/>
                                </TableRow>

                            </TableLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="식사시간 종료 10분 전까지 입장 부탁드립니다."
                                android:textSize="10dp"
                                android:textColor="@color/colorBlack"
                                android:textAlignment="viewEnd"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/menu_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/menu_day"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/menu_list"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </TabHost>
    </FrameLayout>
</layout>